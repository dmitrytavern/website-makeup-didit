.modal#modal-freelancer
    svg.modal__close( data-dismiss="modal" )
        use( xlink:href=sprite('close') )

    .modal__wrapper
        .modal__tab( data-name="form" ).is-active
            h2.modal__title.modal__title-form Apply as a Freelancer
            form#modal-freelancer-form( method="POST" action="callback.php" )
                div
                    .input.modal__input.is-required
                        .input__label First Name
                        input( type="text" name="first_name" placeholder="Your Name" data-required data-placeholder="Your Name")

                    .input.modal__input.is-required
                        .input__label Last Name
                        input( type="text" name="last_name" placeholder="Your Last Name" data-required data-placeholder="Your Last Name")

                    .input.modal__input.is-required
                        .input__label Email
                        input( type="email" name="email" placeholder="Your Email" data-required data-placeholder="Your Email")

                    .input.modal__input
                        .input__label Specialization
                        .dropdown.selector
                            button.dropdown-toggle.selector__front( type="button" data-toggle="dropdown" )
                                span Choose your Specialization
                                svg
                                    use( xlink:href=sprite('arrow') )

                            .dropdown-menu.selector__list
                                a( href="#" ) Designer
                                a( href="#" ) Developer
                                a( href="#" ) Finance Experts
                                a( href="#" ) Project Managers

                    .input.modal__input
                        .input__label Working Experiance
                        input( type="text" name="experiance" placeholder="Your Working Experiance")

                    .input.modal__input
                        .input__label Portfolio Link
                        input( type="text" name="portfolio" placeholder="Link on your Portfolio")

                .modal__checkbox.checkbox
                    label
                        input( type="checkbox" name="privacy_policy" hidden="hidden")
                        .checkbox__box
                            svg
                                use( xlink:href=sprite('check') )

                        span I am agree with <a href="#">Privacy Policy</a>

                .form-error-text Has error

                button( type="submit" ).btn.btn-primary.modal__btn Apply

        .modal__tab( data-name="success" )
            h3.modal__title.modal__title-success Request has been Sent!
            p Thank you for interesting our company. <br/> Our manager will contact you soon!
            a(href="#" data-dismiss="modal").btn.btn-primary.modal__btn Close


.modal-custom-backdrop
